        <template id="invoice_custom_report_template">
            <t t-call="web.html_container">
                <t t-set="lang" t-value="en_US"/>
                <t t-call="xf_partner_contract.custom_layout" t-lang="lang">
                    <t t-call="xf_partner_contract.invoice_page" t-lang="lang"/>
                </t>
            </t>
        </template>

        <template id="invoice_page">
            <t t-set="docs" t-value="docs.with_context(lang=lang)"/>
            <div class="page" style="background-image:url('/xf_partner_contract/static/description/back.jpg');
                        background-size:235mm 255mm; width:235mm; height:255mm; padding-top:0mm; font-family: Arial, Helvetica, sans-serif; font-weight: 8; line-height:1; font-size: .9rem;">
                <div class="text-left"
                     style="margin-left: 150mm; margin-top: 30mm; line-height:1.5; margin-right:40mm;">
                    <div>
                        <t t-esc="docs.partner_id.display_name"/>
                    </div>
                    <div>
                        <t t-if="docs.partner_id.street">
                            <t t-esc="docs.partner_id.street"/>
                        </t>
                        <t t-if="docs.partner_id.city">
                            <t t-esc="docs.partner_id.city"/>,
                        </t>
                        <t t-if="docs.partner_id.state_id">
                            <t t-esc="docs.partner_id.state_id.name"/>,
                        </t>
                        <t t-if="docs.partner_id.zip">
                            <t t-esc="docs.partner_id.zip"/>,
                        </t>
                        <t t-if="docs.partner_id.country_id">
                            <t t-esc="docs.partner_id.country_id.name"/>
                        </t>
                    </div>
                </div>

                <div class="text-left" style="margin-left: 40px;">
                    <h3 style="color:black;">
                        Invoice
                    </h3>
                    <br/>
                    <div>
                        <label style="width:160px;">
                            Invoice Number
                        </label>
                        :&amp;nbsp;
                        <t t-esc="docs.name"/>
                    </div>
                    <div>
                        <label style="width:160px;">
                            Date
                        </label>
                        :&amp;nbsp;
                        <t t-esc="docs.invoice_date"/>
                    </div>
                    <div>
                        <label style="width:160px;">
                            Payment terms
                        </label>
                        :&amp;nbsp;
                        <t t-esc="docs.invoice_payment_term_id.name"/>
                    </div>
                    <div>
                        <label style="width:160px;">
                            Invoice due date
                        </label>
                        :&amp;nbsp;
                        <t t-esc="docs.invoice_date_due"/>
                    </div>
                    <div>
                        <label style="width:160px;">
                            Your Reference
                        </label>
                        :&amp;nbsp;
                        <t t-esc="docs.your_rev"/>
                    </div>
                    <br/>
                    <div>
                        <label style="width:160px;">
                            Contract number
                        </label>
                        :&amp;nbsp;
                        \
                        <t t-esc="docs.contract_id.name"/>
                    </div>
                    <div>
                        <label style="width:160px;">
                            Incoterms
                        </label>
                        :&amp;nbsp;
                        <t t-esc="docs.invoice_incoterm_id.name"/>
                    </div>
                    <div>
                        <label style="width:160px;">
                            Packaging
                        </label>
                        :&amp;nbsp;
                        <t t-esc="docs.package_id.name"/>
                    </div>
                    <div>
                        <label style="width:160px;">
                            Country of origin
                        </label>
                        :&amp;nbsp;
                        <t t-esc="docs.country_origin_id.name"/>
                    </div>
                </div>
                <br/>
                <br/>
                <br/>
                <div class="row">
                    <div class="col-12">
                        <table class="table table-bordered" style=" margin-top:50px;"
                               id="hash_config_table">
                            <thead style="background-color:#6699CC;">
                                <tr>
                                    <th class="text-center" style="width: 20%; color: white;" scope="col">
                                        Product
                                    </th>
                                    <th class="text-center" style="width: 20%; color: white;" scope="col">
                                        Container
                                        Number
                                    </th>
                                    <th class="text-center" style="width: 20%; color: white;" scope="col">
                                        Quantity MT
                                    </th>
                                    <th class="text-center" style="width: 20%; color: white;" scope="col">Price
                                        per
                                        MT
                                    </th>
                                    <th class="text-center" style="width: 20%; color: white;" scope="col">Line
                                        Total
                                    </th>
                                </tr>
                            </thead>
                            <body>
                                <t t-foreach="docs.invoice_line_ids" t-as="result">
                                    <tr>
                                        <td style="border: 1px solid #69c;">
                                            <t t-esc="result.product_id.name"/>
                                        </td>
                                        <td style="border: 1px solid #69c;">
                                            <t t-esc="result.container_no"/>
                                        </td>
                                        <td style="border: 1px solid #69c;">
                                            <t t-esc="'%.2f'%(result.quantity)"/>
                                        </td>
                                        <td style="border: 1px solid #69c;">
                                            <t t-esc="docs.currency_id.symbol"/>
                                            <t t-esc="'%.2f'%(result.price_unit)"/>
                                        </td>
                                        <td style="border: 1px solid #69c;">
                                            <t t-esc="docs.currency_id.symbol"/>
                                            <t t-esc="'%.2f'%(result.price_subtotal)"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td style="border: 1px solid #69c; background-color: white;">
                                    </td>
                                    <td style="border: 1px solid #69c; background-color: white;">
                                    </td>
                                    <td style="border: 1px solid #69c; font-weight: bold; background-color: white;">
                                        Total MT &amp;nbsp;
                                        <t t-esc="'%.2f'%(sum(docs.invoice_line_ids.mapped('quantity')))"/>
                                    </td>
                                    <td style="border: 1px solid #69c; background-color: white;">
                                    </td>
                                    <td style="border: 1px solid #69c; font-weight: bold; background-color: white;">
                                        Total &amp;nbsp;
                                        <t t-esc="docs.currency_id.symbol"/>
                                        <t t-esc="'%.2f'%(docs.amount_total)"/>
                                    </td>
                                </tr>
                            </body>
                        </table>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>