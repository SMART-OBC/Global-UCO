<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_custom_invoice" model="report.paperformat">
        <field name="name">Invoice custom Print</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">50</field>
        <field name="margin_left">5</field>
        <field name="margin_right">0</field>
        <!--            <field name="header_line" eval="False" />-->
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>


    <record id="paperformat_contract" model="report.paperformat">
        <field name="name">Contract Print</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">23</field>
        <field name="margin_left">5</field>
        <field name="margin_right">0</field>
        <!--            <field name="header_line" eval="False" />-->
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>


    <record id="action_print_contract" model="ir.actions.report">
        <field name="name">Print Contract</field>
        <field name="model">xf.partner.contract</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">xf_partner_contract.contract_report_template</field>
        <field name="report_file">xf_partner_contract.contract_report_template</field>
        <field name="print_report_name">'Contract'</field>
        <field name="paperformat_id" ref="xf_partner_contract.paperformat_contract"/>
        <field name="binding_model_id" ref="model_xf_partner_contract"/>
        <field name="binding_type">report</field>
    </record>

    <record id="print_custom_invoice" model="ir.actions.report">
        <field name="name">Print Custom Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">xf_partner_contract.invoice_custom_report_template</field>
        <field name="report_file">xf_partner_contract.invoice_custom_report_template</field>
        <field name="print_report_name">'Invoice'</field>
        <field name="paperformat_id" ref="xf_partner_contract.paperformat_custom_invoice"/>
        <field name="binding_model_id" ref="model_account_move"/>
        <field name="binding_type">report</field>
    </record>
</odoo>